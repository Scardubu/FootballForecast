{
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "client",
    "client/**",
    "client/src/**",
    "client/src/lib/**/*.ts",
    "client/src/lib/**/*.tsx",
    "client/src/lib/*.ts",
    "client/src/lib/*.tsx",
    "client/src/lib/env-config.ts",
    "**/*.test.ts",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  }
}
