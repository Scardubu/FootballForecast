# =============================================================================
# FOOTBALL FORECAST - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# Database
DATABASE_URL=postgresql://<prod_user>:<prod_password>@<prod_host>:5432/football_forecast

# Application
PORT=5000
NODE_ENV=production

# Python ML Service
ML_SERVICE_PORT=8000
ML_SERVICE_URL=http://ml-service:8000

# Managed WebSocket (optional)
# Enable and set URL/token to use a managed WS provider in production (e.g., Fly.io, Ably, Pusher, Upstash WS)
VITE_WS_ENABLED=false
VITE_WS_URL=
VITE_WS_AUTH_TOKEN=

# API-Football
API_FOOTBALL_KEY=your_real_api_key_here
API_FOOTBALL_HOST=v3.football.api-sports.io
API_RATE_LIMIT=100

# Session
SESSION_SECRET=your_strong_production_secret
SESSION_MAX_AGE=86400000
SESSION_SECURE=true

# Scraping
ENABLE_SCRAPING=false
SCRAPING_INTERVAL_FIXTURES=3600000
SCRAPING_INTERVAL_STANDINGS=7200000
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Logging
LOG_LEVEL=warn
LOG_PRETTY=false

# Security
CORS_ORIGINS=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Docker/Postgres
POSTGRES_USER=<prod_user>
POSTGRES_PASSWORD=<prod_password>
POSTGRES_DB=football_forecast
POSTGRES_PORT=5432

# Disable dev tools in production
ENABLE_DEV_TOOLS=false
ENABLE_HOT_RELOAD=false
